// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fruits {
    id                      Int          @id @default(autoincrement())
    name                    String       @db.VarChar(255)
    genus                   String?      @db.VarChar(255)
    image                   String
    price                   Decimal       @db.Decimal(5,2)
    family                  String?       @db.VarChar(255)
    order                   String
    createdAt               DateTime      @default(now())
    createdBy               String?       @db.VarChar(255)
    updatedAt               DateTime      @updatedAt
    updatedBy               String?       @db.VarChar(255)

}

model Nutrition {
    Fruits_id                Int           @id @default(autoincrement())
    carbohydrates            Decimal       @db.Decimal(5,2)
    protein                  Decimal       @db.Decimal(5,2)
    fath                     Decimal       @db.Decimal(5,2)
    calories                 Decimal       @db.Decimal(5,2)
    sugar                    Decimal       @db.Decimal(5,2)
}
